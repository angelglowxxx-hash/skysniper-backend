<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>SkySniper Admin Panel</title>
  <link rel="stylesheet" href="/styles/admin.css" />
  <style>
    body {
      background-color: #0f0f0f;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
      padding: 2rem;
    }
    h1, h2 {
      color: #ff0055;
    }
    section {
      margin-bottom: 2rem;
      border-bottom: 1px solid #333;
      padding-bottom: 1rem;
    }
    input {
      padding: 0.5rem;
      margin-right: 0.5rem;
      background: #1a1a1a;
      border: 1px solid #444;
      color: #fff;
      border-radius: 4px;
    }
    button {
      padding: 0.5rem 1rem;
      background: #ff0055;
      border: none;
      color: #fff;
      border-radius: 4px;
      cursor: pointer;
    }
    ul {
      list-style: none;
      padding-left: 0;
    }
    li {
      margin-bottom: 1rem;
      background: #1a1a1a;
      padding: 1rem;
      border-radius: 6px;
    }
    pre {
      background: #1a1a1a;
      padding: 1rem;
      border-radius: 6px;
      overflow-x: auto;
    }
    .empty {
      color: #888;
      font-style: italic;
    }
  </style>
</head>
<body>
  <h1>ğŸ§  SkySniper Admin Panel</h1>
  <p><small><%= diagnostics.timestamp %></small></p>

  <section>
    <h2>ğŸ”§ System Info</h2>
    <p><strong>AI Model:</strong> <%= ai_model || "N/A" %></p>
    <p><strong>Supabase:</strong> <%= supabase_url || "N/A" %></p>
    <p><strong>Backend:</strong> <%= backend_url || "N/A" %></p>
  </section>

  <section>
    <h2>ğŸ” Fingerprints</h2>
    <% if (fingerprints && fingerprints.length) { %>
      <ul>
        <% fingerprints.forEach(fp => { %>
          <li>
            <strong>Site:</strong> <%= fp.site_url %><br />
            <strong>Game:</strong> <%= fp.game %><br />
            <strong>Modules:</strong> <%= fp.modules?.join(", ") || "None" %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="empty">No fingerprints found.</p>
    <% } %>
  </section>

  <section>
    <h2>ğŸ¯ Push Config via AI</h2>
    <form method="POST" action="/admin/pushConfig">
      <input name="site_url" placeholder="Site URL" required />
      <input name="game" placeholder="Game Name" required />
      <button type="submit">Push Config</button>
    </form>
  </section>

  <section>
    <h2>ğŸ“Š Latest Predictions</h2>
    <% if (rounds && rounds.length) { %>
      <ul>
        <% rounds.forEach(r => { %>
          <li>
            <strong>Round:</strong> <%= r.round_id %><br />
            <strong>Multiplier:</strong> <%= r.multiplier %><br />
            <strong>Prediction:</strong> <%= r.next_prediction %><br />
            <strong>Tag:</strong> <%= r.tag %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="empty">No predictions available.</p>
    <% } %>
  </section>

  <section>
    <h2>ğŸ§ª Diagnostics</h2>
    <pre><%= JSON.stringify(diagnostics, null, 2) %></pre>
  </section>
</body>
</html>
