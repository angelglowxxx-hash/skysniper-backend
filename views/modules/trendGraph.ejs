<section class="hud-module">
  <h3>ðŸ“Š Trend Graph</h3>
  <canvas id="trendGraph" width="300" height="100"></canvas>
  <script>
    const ctx = document.getElementById('trendGraph').getContext('2d');
    const data = <%- JSON.stringify(trend_data || []) %>;
    if (window.Chart) {
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: data.map((_, i) => `R${i+1}`),
          datasets: [{
            label: 'Multiplier',
            data: data,
            borderColor: '#ff0055',
            backgroundColor: 'rgba(255,0,85,0.2)',
            fill: true
          }]
        },
        options: { responsive: true, scales: { y: { beginAtZero: true } } }
      });
    }
  </script>
</section>
